@model PricatMVC.Models.User

@{
    ViewData["Title"] = "Register";

    // Assign the New Layout created
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}


<div class="container">
    <div class="row justify-content-center">
        <div class="m-2 p-2 col-sm-12 col-md-8 col-xl-8 border border-1 rounded">
            <div class="bg-yellow text-center rounded">
                <img class="mt-3 p-2 rounded-3 border-color-blue" src="/images/Product_Icon.png" alt="">
                <h1 class="h1-blue">Pricat</h1>
            </div>
            <div>
                <form asp-action="Register" class="row">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mt-2">
                        <label asp-for="UserEmail">Usuario :</label>
                        <input asp-for="UserEmail" type="email" class="form-control" placeholder="john.doe@email.com" required autofocus>
                        <span asp-validation-for="UserEmail" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2 col-sm-6 col-md-6">
                        <label asp-for="FirstName">Nombre :</label>
                        <input asp-for="FirstName" type="text" class="form-control" placeholder="John" required>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2 col-sm-6 col-md-6">
                        <label asp-for="LastName">Apellido :</label>
                        <input asp-for="LastName" type="text" class="form-control" placeholder="Doe" required>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2 col-sm-6 col-md-6">
                        <label asp-for="Password">Contraseña :</label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Password" required>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2 col-sm-6 col-md-6">
                        <label asp-for="ConfirmPassword">Confirmar Contraseña :</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirmar Password" required>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="mt-2 text-center">
                        <button class="m-2 btn btn-lg btn-primary w-25" type="submit">Registrar</button>
                        <a asp-action="Login" class="m-2 btn btn-lg btn-secondary w-25">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}