@model IEnumerable<PricatMVC.App.Models.Category>

@{
    ViewData["Title"] = "Categorias";
}

<h1>Categorias</h1>

<p>
    <a asp-action="Create" class="btn btn-success" title="Adicionar"><i class="bi bi-plus-lg"></i></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id" title="Editar"><i class="bi bi-pencil-fill"></i></a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id" title="Eliminar"><i class="bi bi-trash"></i></a>
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id" title="Productos"><i class="bi bi-box-seam"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
