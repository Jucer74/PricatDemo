@model PricatMVC.Domain.Entities.User

@{
    ViewData["Title"] = "Login";

    // Assign the New Layout created
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-sm-6 col-md-6 col-xl-4 m-2 p-2 border border-1 rounded">
            <div class="bg-yellow text-center rounded">
                <img class="mt-3 p-2 rounded-3 border-color-blue" src="/images/Product_Icon.png" alt="">
                <h1 class="h1-blue">Pricat</h1>
            </div>
            <div>
                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mt-2">
                        <label asp-for="UserEmail" class="control-label">Usuario :</label>
                        <input asp-for="UserEmail" type="email" class="form-control" placeholder="john.doe@email.com" required autofocus>
                        <span asp-validation-for="UserEmail" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                        <label asp-for="Password">Contraseña :</label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Password" required>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="text-center">
                        <button id="btbLogin" class="mt-2 btn btn-lg btn-primary w-50" type="submit">Ingresar</button>
                    </div>
                </form>
                <a asp-action="Register" class="mt-2 d-block text-center">Registrar</a>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}